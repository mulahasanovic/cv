---
import type { ComponentProps } from "astro/types";

interface Props {
  title: string;
  className?: string;
  visible?: boolean;
}
const { title, className = "", visible = true } = Astro.props;
export type SectionProps = ComponentProps<typeof Section>;
---

{
  visible && (
    <section class={className}>
      <h2 class="text-xl tracking-widest font-medium uppercase border-dotted border-b-2 pb-2.5 mb-6">
        {title}
      </h2>
      <div class="space-y-6">
        <slot />
      </div>
    </section>
  )
}
